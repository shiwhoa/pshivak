@page "/contact"
@inherits LayoutComponentBase

<div class="contact-section container py-5">
    <div class="row">
        <!-- Left side: Contact Information -->
        <div class="col-md-6 contact-info">
            <h2 class="contact-title">Contact <span class="highlight">Me</span></h2>
            <p class="contact-text"><i class="bi bi-telephone-fill"></i> +1 806 412 8900</p>
            <p class="contact-text"><i class="bi bi-envelope-fill"></i> pshiva6991@gmail.com</p>
        </div>

        <!-- Right side: Contact Form -->
        <div class="col-md-6">
            <form action="https://formspree.io/f/xrbgpnba" method="POST">
                <div class="form-group">
                    <label for="name">Your Name:</label>
                    <input type="text" name="name" class="form-control mb-2" placeholder="Name" required />
                </div>
                <div class="form-group">
                    <label for="email">Your Email:</label>
                    <input type="email" name="email" class="form-control mb-2" placeholder="Email address" required />
                </div>
                <div class="form-group">
                    <label for="message">Your Message:</label>
                    <textarea name="message" class="form-control mb-2" rows="4" placeholder="Message" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary btn-block">SEND</button>
            </form>
        </div>
    </div>

    <!-- Additional Contact Links Card -->
    <div class="row mt-4">
        <div class="col-12 d-flex justify-content-center">
            <div class="p-3 shadow bg-dark text-white contact-card">
                <div class="card-body">
                    <h5 class="card-title">Connect with Me</h5>
                    <p class="card-text">
                        <i class="bi bi-github"></i> <strong>GitHub:</strong>
                        <a href="https://github.com/shiwhoa" target="_blank" class="text-info">https://github.com/shiwhoa</a>
                    </p>
                    <p class="card-text">
                        <i class="bi bi-linkedin"></i> <strong>LinkedIn:</strong>
                        <a href="https://www.linkedin.com/in/p-shiva-kumar/" target="_blank" class="text-info">https://www.linkedin.com/in/p-shiva-kumar/</a>
                    </p>
                    <p class="card-text">
                        <i class="bi bi-globe"></i> <strong>Webpage:</strong>
                        <a href="https://shiwhoa.github.io/pshivak" target="_blank" class="text-info">https://shiwhoa.github.io/pshivak</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
