@page "/contact"
@inherits LayoutComponentBase

<div class="contact-section container py-4">
    <div class="row">
        <!-- Contact Information -->
        <div class="col-md-6 mb-4">
            <div class="p-3 rounded bg-light shadow">
                <h2 class="contact-title text-center mb-3">Contact <span class="highlight">Me</span></h2>
                <div class="text-center">
                    <p class="contact-text"><i class="bi bi-telephone-fill"></i> +1 806 412 8900</p>
                    <p class="contact-text"><i class="bi bi-envelope-fill"></i> pshiva6991@gmail.com</p>
                </div>
            </div>
        </div>

        <!-- Contact Form -->
        <div class="col-md-6">
            <div class="p-3 rounded bg-light shadow">
                <form action="https://formspree.io/f/xrbgpnba" method="POST">
                    <div class="form-group mb-3">
                        <label for="name">Your Name:</label>
                        <input type="text" name="name" class="form-control" placeholder="Name" required />
                    </div>
                    <div class="form-group mb-3">
                        <label for="email">Your Email:</label>
                        <input type="email" name="email" class="form-control" placeholder="Email address" required />
                    </div>
                    <div class="form-group mb-3">
                        <label for="message">Your Message:</label>
                        <textarea name="message" class="form-control" rows="4" placeholder="Message" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">SEND</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Additional Contact Links Card -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card p-3 shadow bg-dark text-white">
                <div class="card-body text-center">
                    <h5 class="card-title">Connect with Me</h5>
                    <p class="card-text">
                        <i class="bi bi-github"></i> <strong>GitHub:</strong> <a href="https://github.com/shiwhoa" target="_blank" class="text-white">https://github.com/shiwhoa</a><br>
                        <i class="bi bi-linkedin"></i> <strong>LinkedIn:</strong> <a href="https://www.linkedin.com/in/p-shiva-kumar/" target="_blank" class="text-white">https://www.linkedin.com/in/p-shiva-kumar/</a><br>
                        <i class="bi bi-globe"></i> <strong>Webpage:</strong> <a href="https://shiwhoa.github.io/pshivak" target="_blank" class="text-white">https://shiwhoa.github.io/pshivak</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
